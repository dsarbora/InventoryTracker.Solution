@using InventoryTracker.Models
@{
    Layout="_Layout";
}
<div class="header">
    <h1 class="title">Dishes Index</h1>
</div>
<div id="two" class="container">
  <div class="row">
  
  @if(Model.Count == 0)
  {
    <p>No orders</p>
  }
  @if(Model.Count != 0)
  {
    @foreach(Dish dish in Model)
    {
      <p><a href="/dishes/@dish.GetId()">@dish.GetName()</a></p>
    }
  }
  </div>
  <div class="row">
    <p><a href="/dishes/new">New dish<a></p>
  </div>
</div>
